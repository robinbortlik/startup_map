<script type="text/x-handlebars" data-template-name="startup-form">
  <div class="modal" id="myModal">
    <div class="modal-header">
      <button type="button" class="close" {{action destroy}}>Ã—</button>
      <h3>New Startrup</h3>
    </div>
    <div class="modal-body">
     <form action="#" class="form-horizontal">
      <div class="control-group">
       <label class="control-label">Name</label>
       <div class="controls">
        {{view Ember.TextField valueBinding="name" placeholder="Name your startup"}}
       </div>
       </div>
       
       <div class="control-group">
       <label class="control-label">Description</label>
       <div class="controls">
        {{view Ember.TextArea valueBinding="description" placeholder="Description"}}
       </div>
       </div>
       
       <div class="control-group">
       <label class="control-label">Address</label>
       <div class="controls">
        {{view Ember.TextField valueBinding="address" placeholder="Street, Street number, City"}}
       </div>
       </div>
       
       <div class="control-group">
       <label class="control-label">URL</label>
       <div class="controls">
        {{view Ember.TextField valueBinding="url" placeholder="http://www.example.com"}}
       </div>
       </div>
       
       <div class="control-group">
       <label class="control-label">Email</label>
       <div class="controls">
        {{view Ember.TextField valueBinding="email" placeholder="Email"}}
       </div>
       </div>
       
       <div class="control-group">
         <label class="control-label">Tags</label>
         <div class="controls">
          {{view Ember.TextField valueBinding="tags" placeholder="Add tag"}}
         </div>
       </div>
       
       <div class="control-group">
         <label class="control-label">Found date</label>
         <div class="controls">
           {{view Ember.TextField valueBinding="found_date" placeholder="Start date" class="input-small datepicker"}}
         </div>
       </div>
  
       
       <div class="control-group">
         <label class="control-label">Monetization</label>
         <div class="controls">
         {{view Ember.Select
                contentBinding="App.startupMonetization.content"
                optionLabelPath="content.title"
                optionValuePath="content.id"
                prompt="Please Select"}}
         </div>
       </div>
       
       <div class="control-group">
          <label class="control-label">Phase</label>
          <div class="controls">
          {{view Ember.TextField valueBinding="phase"}}
          </div>
        </div>
       
     </form>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" {{action destroy}}>Close</a>
      <a href="#" class="btn btn-primary" {{action submit}}>Save changes</a>
    </div>
  </div>
</script>
